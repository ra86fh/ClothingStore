<Window x:Class="ClothingStore.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothingStore"
        mc:Ignorable="d"
        Title="Update" Height="250" Width="400">
    <Grid>
        <TextBox x:Name="txtUpdateName" Margin="0,58,0,0" TextWrapping="Wrap" Text="TextBox" FontSize="16" FontFamily="Javanese Text" VerticalContentAlignment="Center" Height="36" VerticalAlignment="Top" HorizontalContentAlignment="Left" HorizontalAlignment="Center" Width="200"/>
        <Button x:Name="bAcceptUpdate" Content="Done" FontSize="16" FontFamily="Javanese Text" Height="36" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Margin="0,98,0,0" Click="bAcceptUpdate_Click"/>
        <Button x:Name="bCancelUpdate" Content="Cancel" Margin="0,140,0,0" FontSize="16" FontFamily="Javanese Text" Click="bCancelUpdate_Click" Height="36" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200"/>


    </Grid>
</Window>
